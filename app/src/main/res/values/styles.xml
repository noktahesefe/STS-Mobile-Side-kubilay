<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- ... other style definitions ... -->
    </style>

    <!-- Style for TextInputLayout with White Stroke -->
    <style name="WhiteOutlineTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/white</item> <!-- Use white color for the stroke -->
        <item name="boxStrokeWidth">1dp</item> <!-- Set the stroke width -->
    </style>

    <style name="TransparentActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimary">#00FFFFFF</item>
        <item name="colorPrimaryDark">#00FFFFFF</item>
        <item name="colorAccent">#00FFFFFF</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Set the button text color -->
        <item name="colorAccent">@color/night_blue</item>

    </style>


    <style name="student_info_green">
        <item name="android:textSize">15sp</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">#00FF57</item>
    </style>

    <style name="PurpleButton">
        <item name="android:backgroundTint">@color/button_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="student_info_white">
        <item name="android:textSize">15sp</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize your theme attributes here -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/AlertDialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AlertDialogButton</item>
    </style>

    <style name="AlertDialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <!-- Customize your button style attributes here -->
    </style>

    <style name="SearchViewTheme"
            parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorControlActivated">@android:color/black</item>
    </style>

    <style name="FullscreenDialogTheme" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name = "android:statusBarColor">#280680</item>
        <item name = "windowNoTitle">true</item>
        <item name = "android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
    </style>


</resources>